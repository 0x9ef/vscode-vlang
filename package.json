{
	"name": "vscode-vlang",
	"displayName": "V",
	"description": "V language support (syntax highlighting, formatter, linter, snippets) for Visual Studio Code.",
	"publisher": "vlanguage",
	"icon": "icons/icon.png",
	"version": "0.1.8",
	"license": "MIT",
	"engines": {
		"vscode": "^1.40.0"
	},
	"homepage": "https://vlang.io/",
	"bugs": {
		"url": "https://github.com/vlang/vscode-vlang/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vlang/vscode-vlang"
	},
	"keywords": [
		"V",
		"v",
		"v language",
		"vlang",
		"extension",
		"autocompletion"
	],
	"categories": [
		"Snippets",
		"Programming Languages"
	],
	"contributes": {
		"snippets": [
			{
				"language": "v",
				"path": "snippets/snippets.json"
			}
		],
		"languages": [
			{
				"id": "v",
				"aliases": [
					"V"
				],
				"extensions": [
					".v",
					".vsh",
					".vv"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "v",
				"scopeName": "source.v",
				"path": "./syntaxes/v.tmLanguage.json"
			}
		],
		"configuration": {
			"title": "V",
			"properties": {
				"v.pathToExecutableFile": {
					"scope": "resource",
					"type": "string",
					"default": "",
					"description": "Path to V executable file"
				},
				"v.vls.customPath": {
					"scope": "resource",
					"type": "string",
					"default": "",
					"description": "Custom path to the VLS (V Language Server) executable. Restart is required to take effect."
				},
				"v.vls.enable": {
					"scope": "resource",
					"type": "boolean",
					"default": false,
					"description": "Enables the language server. (alpha)"
				},
				"v.vls.enableFeatures": {
					"scope": "resource",
					"type": "string",
					"description": "Enables specific language server features. Multiple values must be separated with a comma (,)."
				},
				"v.vls.disableFeatures": {
					"scope": "resource",
					"type": "string",
					"description": "Disables specific language server features. Multiple values must be separated with a comma (,)."
				}
			}
		},
		"configurationDefaults": {
			"[v]": {
				"editor.insertSpaces": false
			}
		},
		"commands": [
			{
				"command": "v.run",
				"title": "Run current file",
				"category": "V"
			},
			{
				"command": "v.prod",
				"title": "Build an optimized executable from current file",
				"category": "V"
			},
			{
				"command": "v.help",
				"title": "Show help info",
				"category": "V"
			},
			{
				"command": "v.ver",
				"title": "Show V version",
				"category": "V"
			},
			{
				"command": "v.path",
				"title": "Show local paths info",
				"category": "V"
			},
			{
				"command": "v.devbits_playground",
				"title": "Open current code on DevBits V playground",
				"category": "V"
			},
			{
				"command": "v.vls.update",
				"title": "Update VLS",
				"category": "V"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "v.run",
					"when": "editorLangId == v"
				},
				{
					"command": "v.prod",
					"when": "editorLangId == v"
				},
				{
					"command": "v.devbits_playground",
					"when": "editorLangId == v"
				}
			]
		},
		"breakpoints": [
			{
				"language": "v"
			}
		]
	},
	"activationEvents": [
		"workspaceContains:**/*.v",
		"onLanguage:v",
		"onCommand:v.help",
		"onCommand:v.ver",
		"onCommand:v.path"
	],
	"main": "./out/extension.js",
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/node": "^15.12.2",
		"@types/vscode": "^1.40.0",
		"chokidar": "^3.5.1",
		"markdownlint-cli": "^0.27.1",
		"ts-loader": "^9.2.3",
		"typescript": "^4.3.2",
		"vsce": "^1.87.0",
		"vscode-tmgrammar-test": "^0.0.11",
		"webpack": "^5.39.0",
		"webpack-cli": "^4.7.2"
	},
	"scripts": {
		"compile": "tsc -p ./",
		"lint": "markdownlint *.md -i CHANGELOG.md",
		"vscode:prepublish": "node ./scripts/minify_json.js && webpack --mode production",
		"watch": "tsc -watch -p ./",
		"webpack-dev": "webpack --mode development --watch",
		"webpack": "webpack --mode development",
		"package": "vsce package",
		"postpackage": "node ./scripts/minify_json.js --restore",
		"testgrammar": "vscode-tmgrammar-test -s source.v -g syntaxes/v.tmLanguage.json -t syntaxes/tests/*.v"
	}
}
